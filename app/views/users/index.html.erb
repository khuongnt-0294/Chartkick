<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= pie_chart User.group(:name).count %>
<%= column_chart User.group(:name).count %>
<%= bar_chart User.group(:name).count %>
<%= area_chart User.group(:name).count %>
<%= geo_chart User.group(:name).count %>
<%= line_chart User.group(:name).count %>


<%= link_to 'New User', new_user_path %>
<%= link_to 'Create Post', new_post_path %>
